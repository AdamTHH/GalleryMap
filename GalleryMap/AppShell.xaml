<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GalleryMap.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GalleryMap"
    xmlns:views="clr-namespace:GalleryMap.Views"
    Title="GalleryMap"
    xmlns:helpers="clr-namespace:GalleryMap.Helpers">

    <TabBar>
        <Tab Title="Gallery">
            <Tab.Icon>
                <FontImageSource 
        Glyph="{x:Static helpers:IconFont.Image}"
        FontFamily="FontAwesomeSolid"
        />
            </Tab.Icon>
            <ShellContent
            Title="Gallery"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        </Tab>

        <Tab Title="Maps">
            <Tab.Icon>
                <FontImageSource 
                    Glyph="{x:Static helpers:IconFont.Map}"
                    FontFamily="FontAwesomeSolid"
                    />
            </Tab.Icon>
            <ShellContent
            Title="Maps"
            ContentTemplate="{DataTemplate views:MapsPage}"
            Route="MapsPage" />
        </Tab>
    </TabBar>

</Shell>
